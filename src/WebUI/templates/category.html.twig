{# templates/index.html.twig #}
{% extends 'layout.html.twig' %}

{% block title %}Домашняя страница{% endblock %}

{% block header %}

{% endblock %}

{% block content %}
    <a ></a>
    <div class="container">
        <h2 class="row">Create Category</h2>
        {{ form(form) }}
    </div>

    <div class="row">
        <h2>Categories</h2>
        {% if categories is empty %}
            <p>No categories</p>
        {% else %}
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for category in categories %}
                    <tr>
                        <td>{{ category.name }}</td>
                        <td>{{ category.type.getValue() }}</td>
                        <td>
                            <a href="{{ path('category_update', { 'category_uuid': category.uuid }) }}">
                                <i class="fa fa-edit" aria-hidden="true"></i>
                            </a>
                            <a href="{{ path('category_delete', { 'category_uuid': category.uuid }) }}">
                                <i class="fa fa-trash" aria-hidden="true"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% endif %}

    </div>

{% endblock %}
